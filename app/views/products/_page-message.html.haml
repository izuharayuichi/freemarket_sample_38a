- if comment.user_id == @product.user_id
  .message-body-1
    .message-body
      .message-body-text
        = comment.text
      .message-icons.clearfix
        %time.message-icon-left
          %i.far.fa-clock
          %span 13 日前

- else
  .message-body-2
    .message-body
      .message-body-text
        = comment.text
      .message-icons.clearfix
        %time.message-icon-left
          %i.far.fa-clock
          %span 13 日前
        .message-icon-right
          %i.far.fa-flag
